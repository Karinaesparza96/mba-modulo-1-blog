@model ComentarioViewModel

<form id="form-comentario">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" id="Id" />
        <input type="hidden" asp-for="PostId" />
        <input type="hidden" asp-for="NomeUsuario" />
        <textarea asp-for="Conteudo" class="form-control" rows="3" placeholder="Escreva seu comentário aqui..."></textarea>
        <span asp-validation-for="Conteudo" class="text-danger mt-1"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" class="btn btn-primary" value="Salvar">
    </div>
</form>